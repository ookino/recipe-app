
<div>
<%= link_to "Create a Recipe", new_recipe_path, class: "nav-link" %> 
  <ul class="list-group list-unstyled ">
    <% @recipes.each do |r| %>
    <li class="border border-2 border-primary container mt-5 rounded bio">
      <div class="d-flex p-3">
        <div>
          <%= link_to recipe_path(r.id), id: "recipe_path#{r.id}" do %>
          <h4><%= r.name%></h4>
          <% end %>
          <div>
            <%= button_to "Delete", recipe_path(r.id), method: :delete, class: "btn btn-danger"%>
          </div>
        </div>
        <div>
          <p class="ml-5"><%= r.description%></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>