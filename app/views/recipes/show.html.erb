<p style="color: green"><%= notice %></p>

<div class="flex flex-col gap-4 items-center ">
<div class="flex flex-col p-6 rounded-lg shadow-sm bg-white gap-4 w-full">

  <div class="flex items-center justify-between">
    <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">
      <%= @recipe.name %>
    </h5>
      <%= button_to "Delete Recipe", @recipe, method: :delete,
      class:'inline-block px-6 py-2.5 bg-red-600 text-white font-medium text-xs
      leading-tight uppercase rounded shadow-md hover:bg-red-700 hover:shadow-lg
      focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0
      active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out'
      %>
  </div>

    <p class="text-gray-700 text-base">Preparation time: <span><%= @recipe.preperation_time %></span> mins<p/>
    <p class="text-gray-700 text-base ">Cooking time: <span><%= @recipe.cooking_time %></span> mins<p/>
    <p class="text-gray-700 text-base "><span class="font-bold">STEPS</span><br/><%= @recipe.description %></p>
  

    <div class="flex justify-between">
      <button class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs
      leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg
      focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0
      active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">Generate shopping list</button>
      <button class="inline-block px-6 py-2.5 outline outline-1 outline-blue-600 text-blue-600 font-medium text-xs
      leading-tight uppercase rounded hover:bg-blue-100 
      focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0
      active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">Add Ingredients</button>
    </div>

    <hr/>

</div>

<div>
  <%= link_to "< Back to recipes", recipes_path, class:'text-blue-600
  hover:text-blue-700 underline decoration-transparent
  hover:decoration-inherit transition duration-300 ease-in-out' %>
</div>
</div>

